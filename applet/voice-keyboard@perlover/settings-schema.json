{
    "whisper-mode": {
        "type": "combobox",
        "default": "openai",
        "description": "Whisper mode",
        "options": {
            "OpenAI API": "openai",
            "Local Server": "local"
        },
        "tooltip": "Choose between OpenAI API or local Whisper server"
    },
    "openai-api-key": {
        "type": "entry",
        "default": "",
        "description": "OpenAI API Key",
        "tooltip": "Your OpenAI API key for Whisper (required if using OpenAI mode)",
        "dependency": "whisper-mode=openai"
    },
    "openai-model": {
        "type": "combobox",
        "default": "whisper-1",
        "description": "OpenAI Model",
        "options": {
            "Whisper-1 (fast, $0.006/min)": "whisper-1",
            "GPT-4o Audio (advanced, $0.06/min)": "gpt-4o-audio-preview"
        },
        "tooltip": "Whisper-1: Standard speech-to-text transcription. GPT-4o Audio: Advanced model with better context understanding and emotion detection (10x more expensive)",
        "dependency": "whisper-mode=openai"
    },
    "local-url": {
        "type": "entry",
        "default": "http://localhost:9000/asr",
        "description": "Local Whisper Server URL",
        "tooltip": "URL of your local Whisper server (e.g., faster-whisper-server)",
        "dependency": "whisper-mode=local"
    },
    "language": {
        "type": "combobox",
        "default": "auto",
        "description": "Recognition language",
        "options": {
            "Auto-detect": "auto",
            "Russian": "ru",
            "English": "en",
            "Spanish": "es",
            "German": "de",
            "French": "fr",
            "Chinese": "zh",
            "Japanese": "ja"
        },
        "tooltip": "Language for speech recognition"
    },
    "recording-duration": {
        "type": "spinbutton",
        "default": 300,
        "min": 10,
        "max": 600,
        "step": 10,
        "units": "seconds",
        "description": "Maximum Recording Duration",
        "tooltip": "Safety limit for maximum recording duration. Recording will automatically stop and transcribe when this limit is reached. Default: 5 minutes (300 seconds)."
    },
    "paste-method": {
        "type": "combobox",
        "default": "primary",
        "description": "Text paste method",
        "options": {
            "Middle-click (PRIMARY selection)": "primary",
            "Simulate typing (xdotool type)": "xdotool"
        },
        "tooltip": "Method to insert recognized text. Middle-click is fast and works in most apps including terminals. Simulate typing is slower but more universal."
    },
    "script-path": {
        "type": "entry",
        "default": "/usr/bin/whisper-voice-input",
        "description": "Path to whisper-voice-input script",
        "tooltip": "Full path to the voice input script"
    }
}
