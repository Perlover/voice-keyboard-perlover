{
    "version-label": {
        "type": "label",
        "description": "Voice Keyboard Perlover v@@VERSION@@"
    },
    "whisper-mode": {
        "type": "combobox",
        "default": "openai",
        "description": "Whisper mode",
        "options": {
            "OpenAI API": "openai",
            "Local Server": "local"
        },
        "tooltip": "Choose between OpenAI API or local Whisper server"
    },
    "openai-api-key": {
        "type": "entry",
        "default": "",
        "description": "OpenAI API Key",
        "tooltip": "Your OpenAI API key for Whisper (required if using OpenAI mode)",
        "dependency": "whisper-mode=openai"
    },
    "openai-model": {
        "type": "combobox",
        "default": "whisper-1",
        "description": "OpenAI Model",
        "options": {
            "Whisper-1 (standard, $0.006/min)": "whisper-1",
            "GPT-4o Transcribe (best quality, $0.006/min)": "gpt-4o-transcribe"
        },
        "tooltip": "Whisper-1: Standard speech-to-text. GPT-4o Transcribe: Latest model with best accuracy for all languages",
        "dependency": "whisper-mode=openai"
    },
    "local-url": {
        "type": "entry",
        "default": "http://localhost:9000/asr",
        "description": "Local Whisper Server URL",
        "tooltip": "URL of your local Whisper server (e.g., faster-whisper-server)",
        "dependency": "whisper-mode=local"
    },
    "language": {
        "type": "combobox",
        "default": "auto",
        "description": "Recognition language",
        "options": {
            "Auto-detect": "auto",
            "Russian": "ru",
            "English": "en",
            "Spanish": "es",
            "German": "de",
            "French": "fr",
            "Chinese": "zh",
            "Japanese": "ja"
        },
        "tooltip": "Language for speech recognition"
    },
    "recording-duration": {
        "type": "spinbutton",
        "default": 300,
        "min": 10,
        "max": 600,
        "step": 10,
        "units": "seconds",
        "description": "Maximum Recording Duration",
        "tooltip": "Safety limit for maximum recording duration. Recording will automatically stop and transcribe when this limit is reached. Default: 5 minutes (300 seconds)."
    },
    "script-path": {
        "type": "entry",
        "default": "/usr/bin/whisper-voice-input",
        "description": "Path to whisper-voice-input script",
        "tooltip": "Full path to the voice input script"
    },
    "chat-model": {
        "type": "combobox",
        "default": "gpt-4o-mini",
        "description": "Chat AI Model",
        "options": {
            "GPT-4o Mini": "gpt-4o-mini",
            "GPT-4o": "gpt-4o",
            "GPT-5.2 (most powerful)": "gpt-5.2"
        },
        "tooltip": "Model for processing text with custom prompts",
        "dependency": "whisper-mode=openai"
    },
    "custom-prompts-help": {
        "type": "label",
        "description": "Instructions: Click '+' to add. Use AI to process text. Example: Name='Fix Grammar', Prompt='Correct all typos in the following text:'",
        "dependency": "whisper-mode=openai"
    },
    "custom-prompts": {
        "type": "list",
        "description": "Custom Prompts: click '+' to add. Use AI to process recognized text.",
        "tooltip": "Enabled: toggle prompt. Menu Name: how it appears in right-click menu. System Prompt: instructions for the AI (e.g., 'Translate to French' or 'Fix grammar').",
        "dependency": "whisper-mode=openai",
        "columns": [
            {"id": "enabled", "title": "Enabled", "type": "boolean", "default": true},
            {"id": "name", "title": "Menu Name (e.g., 'My Prompt')", "type": "string", "default": ""},
            {"id": "prompt", "title": "System Prompt (AI instructions)", "type": "string", "default": ""}
        ],
        "default": []
    }
}
